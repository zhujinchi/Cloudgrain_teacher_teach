<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="#C3C3C3">

    <RelativeLayout
        android:id="@+id/evaluate_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/go_to_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:onClick="@{onClick}"
            android:src="@mipmap/yk_icon_return" />

        <TextView
            android:id="@+id/evaluate_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#0091FF"
            android:textSize="14sp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/evaluate_rv"
        android:layout_below="@+id/evaluate_rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/exchange_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/cloud_class_exchange_edit_background"
            android:gravity="left"
            android:hint="输入信息～"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColorHint="#9B9DA1" />

        <TextView
            android:id="@+id/exchange_send_tv"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/my_class_item_blue"
            android:gravity="center"
            android:text="发送"
            android:textColor="#EBECF0"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>