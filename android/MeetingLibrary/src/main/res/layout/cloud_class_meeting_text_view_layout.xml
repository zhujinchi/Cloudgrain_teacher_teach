<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cloud_class_details_name_background"
        android:paddingRight="15dp"
        android:text="0000000"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#52000000">

        <TextView
            android:id="@+id/text_roll_tv"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roll_text_background_selector"
            android:gravity="center"
            android:text="点名"
            android:textColor="#0F2043"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/text_sun_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/sun_background_selector" />

        <ImageView
            android:id="@+id/text_camera_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/text_sun_iv"
            android:background="@drawable/camera_background_selector" />

        <ImageView
            android:id="@+id/text_ears_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/text_camera_iv"
            android:background="@drawable/ears_background_selector" />

        <ImageView
            android:id="@+id/text_switch_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/text_ears_iv"
            android:background="@drawable/switch_background_selector" />

        <ImageView
            android:id="@+id/evaluate_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/text_switch_iv"
            android:background="@mipmap/sp_icon_evaluate" />
    </RelativeLayout>

</LinearLayout>